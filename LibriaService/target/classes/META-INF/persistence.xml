<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="LibriaPU" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!-- IMPORTANT : le JNDI qu'on vient de créer -->
        <jta-data-source>jdbc/LibriaDS</jta-data-source>

        <class>com.libria.domain.User</class>
        <class>com.libria.domain.Member</class>
        <class>com.libria.domain.Admin</class>
        <class>com.libria.domain.Book</class>



        <properties>
            <!-- Laisse Payara gérer les transactions -->
            <property name="jakarta.persistence.transactionType" value="JTA"/>

            <!-- Optionnel mais propre : dire à EclipseLink qu'on est sur MySQL -->
            <property name="eclipselink.target-database" value="MySQL"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>